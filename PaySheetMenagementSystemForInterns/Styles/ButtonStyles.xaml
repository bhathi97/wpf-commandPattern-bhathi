<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--button styles home/close,min,max-->
    <Style x:Key="ButtonStyle1" TargetType="Button" >
        <Setter Property="Background" Value="#780101"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Background" Value="Red"/>
            </Trigger>
        </Style.Triggers>
    </Style>


    <!--button styles home/close,min,max-->
    <Style x:Key="ButtonStyle2" TargetType="Button" >
        <Setter Property="Background" Value="#780101"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Background" Value="Gray"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!--salary enteing page button style-->

    <LinearGradientBrush x:Key="type1bt" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#B7B2B2" Offset="0"/>
        <GradientStop Color="#8E8282" Offset="0.6"/>
    </LinearGradientBrush>
    
    <!--when trigger-->
    <LinearGradientBrush x:Key="type1at" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="CornflowerBlue" Offset="0.6"/>
        <GradientStop Color="#125B6B" Offset="0"/>
    </LinearGradientBrush>


    <Style x:Key="ButtonStyle3" TargetType="Button" >
        <Setter Property="Background" Value="{StaticResource type1bt}"/>

        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="3">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource type1at}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    



    <!-- other styles, templates, and resources here -->
    
    
    
    
    
</ResourceDictionary>