<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--main colors | theme colors-->
    <Color x:Key="backgroundColor1" > white </Color>
    <Color x:Key="backgroundColor2" > #2E1A6F </Color>
    <Color x:Key="backgroundColor3" > black </Color>
    <Color x:Key="backgroundColor4" >#d5daf0</Color>


    <!--static panal colors-->
    <SolidColorBrush x:Key="staticPanalColor1">#d5daf0</SolidColorBrush>
    
    

    <!--menu item color-->
    <Style x:Key="menuColor1" TargetType="Menu" >
        <Setter Property="Background" Value="#2E1A6F"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Background" Value="Red"/>
            </Trigger>
        </Style.Triggers>
    </Style>















</ResourceDictionary>